            {% endfor %}
             <span class="text-light-gray font-poppins font-normal text-[11px] leading-none">1,234 Reviews</span>
        </div>

        <p class="font-poppins font-medium text-base uppercase mt-2">
            {{ product.price | money }}
        </p>
    </div>
</div>