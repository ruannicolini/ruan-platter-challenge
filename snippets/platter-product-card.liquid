<div>
    {% if product.featured_image %}
        <a href="{{ product.url }}" class="block overflow-hidden relative aspect-square w-full rounded-[10px]">
            <div class="z-10 absolute flex justify-between p-1 left-0 top-0 w-full">
                {% if product.tags contains 'best-seller' %}
                    <span class="bg-white px-2 py-1 font-bebas-neue font-normal text-[8px] text-black leading-none tracking-wider text-center border border-solid border-black rounded-[100px]">Best Seller</span>
                {% endif %}
                {% if product.tags contains '15-off' %}
                    <span class="bg-badge-sale px-2 py-1 font-bebas-neue font-normal text-[8px] text-white leading-none tracking-wider text-center border border-solid border-black rounded-[100px]">SAVE 15%</span>
                {% endif %}
            </div>
            <img 
                src="{{ product.featured_image | image_url: width: 400 }}"
                alt="{{ product.featured_image.alt | escape }}"
                width="400"
                height="400"
                class="w-full h-full object-cover transition-opacity duration-300 absolute inset-0 aspect-square"
                loading="lazy"
            />
            {% if product.images[1] %}
                <img 
                    src="{{ product.images[1] | image_url: width: 400 }}"
                    alt="{{ product.images[1].alt | escape }}"
                    width="400"
                    height="400"
                    class="w-full h-full object-cover transition-opacity duration-300 absolute inset-0 opacity-0 hover:opacity-100 aspect-square"
                    loading="lazy"
                />
            {% endif %}
        </a>
    {% endif %}

    <div class="grid mt-3 gap-2 m-2">
        <a href="{{ product.url }}">
            <h3 class="text-tertiary font-bebas-neue font-normal text-base tracking-wide uppercase">
                {{ product.title }}
            </h3>
        </a>

        <div class="flex items-center gap-0.5">
            {% for i in (1..5) %}
                <svg class="w-[9px] h-[9px]" width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
